<h1 class="ui centered grid hidden section divider">Welcome to MessageMe - a complete Chat App</h1>
<div class="ui twelve column centered grid">
  <div class="ui column centered grid power-icon-container">
    <span>
      <i class="icon big orange power off"></i>
    </span>
    <h3 class="ui centered grid">Login to continue</h3>
  </div>
</div>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(scope: :session, url: login_path, class: "ui form", local: true) do |f| %>
      <div class="field">
        <%= f.label :username %>
        <div class="ui left icon input">
          <%= f.text_field :username %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= f.label :password %>
        <div class="ui left icon input">
          <%= f.password_field :password %>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= f.submit "Login", class:"ui orange submit button" %>
    <% end %>
  </div>
  <div class="middle aligned column">
    <div class="ui big orange button">
      <i class="signup icon"></i>
      Sign Up
    </div>
  </div>
</div>
<div class="ui vertical divider">
  Or
</div>
</div>
